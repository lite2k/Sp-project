	for (int i = 0; !eventdata[i].name.empty(); i++)
	{
		eventsnumber++;
	}

	cout << "enter event name\n";
	cin.ignore();
	getline(cin,name);
	for (int i = 0; i < eventsnumber; i++)
	{
		if (name == eventdata[i].name)
		{
			system("cls");
			cout << "name already exist\n";
			eventinput();
		}
	}
	srand(time(NULL));
	ostringstream id_to_string ;
	id_to_string<< rand();
	id = id_to_string.str();


	cout << "enter start date : day month year\n";
	cin >> userday >>usermonth >>useryear;
	cout << "enter end date : day month year\n";
	cin >>day >>month >>year;

	for (int i = 0;!halldata[i].name.empty(); i++)
	{
		cout << i+1<<"."<<halldata[i].name << endl;
	}
	cin >> choice;
	for (int i = 0;!halldata[i].name.empty(); i++)
	{
		if (halldata[choice - 1].name == halldata[i].name)
		{
			hallindex = i;
			break;
		}
	}
	for (int i = 0;!halldata[hallindex].events[i].empty(); i++)
	{
		for (int j = 0;!eventdata[j].name.empty(); j++)
		{
			if (halldata[hallindex].events[i] == eventdata[j].name)
			{
				tempday = eventdata[j].startdate.day;
				dateindex = eventdata[j].enddate.day - eventdata[j].startdate.day;
				if (dateindex == 0 && eventdata[j].startdate.month == usermonth)
				{

				}
		    }

		}
	}
}
