void sort_hall() {
	int eventindex = 0, showindex = 0;
	for (int i = 0;!halldata[i].name.empty(); i++)
	{
		for (int j = 0; !halldata[i].events_shows[j].empty(); j++)
		{
			for (int k = 0;eventdata[k].name.empty();k++)
			{
				if (halldata[i].events_shows[j] == eventdata[k].name)
				{
					halldata[i].events[eventindex]=halldata[i].events_shows[j];
					eventindex++;
			    }    

			}
		}
	}
	for (int i = 0; !halldata[i].name.empty(); i++)
	{
		for (int j = 0; !halldata[i].events_shows[j].empty(); j++)
		{
			for (int k = 0; showdata[k].name.empty(); k++)
			{
				if (halldata[i].events_shows[j] ==showdata[k].name)
				{
					halldata[i].shows[showindex] = halldata[i].events_shows[j];
					showindex++;
				}

			}
		}
	}
}
void eventinput()
{
	string name;
	string id;
