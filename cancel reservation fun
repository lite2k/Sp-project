#include <iostream>
#include <string>
using namespace std; 
struct date {
	string day;
	string year;
	string month;
};
struct events
{
	string name;
	string evinhall;
	string id;
	date startdate;
	string starttime;
	string endtime;
	int evseats;
} eventdata[100];
struct currentuser
{
	string username;

	string eventid[100];
}  curuser;
// start of the function
void canceleventreservation() {
	system("cls");
	int count1 = 0,              // the actual elements of array  user event id
		int count2 = 0;               // the actual elements of array events  id 
	for (int i = 0; i < 100; i++)     // identifay the eventid  of user
	{

		if (curuser.eventid[i].empty())
		{
			break;
		}
		{
			count1++;
		}
	}
	for (int j = 0; j < 100; j++)       // identifay  the eventid of events 
	{
		if (eventdata[j].id.empty());
		{
			break;
		}
		{
			count2++;
		}
	}
	for (int i = 0; i < count1; i++)
	{
		for (int j = 0; j < count2; j++)
		{
			if (curuser.eventid[i] == eventdata[j].id)
			{
				cout << i + 1 << ":" << eventdata[j].name << endl;
				break;
			}
		}
	}
	cout << " Select the event you want to cancel " << endl;
	int choice;
	cin >> choice;
	for (int j = choice - 1; !eventdata[j].name.empty(); j++)
	{
		curuser.eventid[j] = curuser.eventid[j + 1];
	}
}
	int main()
	{

		canceleventreservation();
		system("pause");
		return 0;
	}
