		{
		case 1:
			if (t1 == false)
			{
				cout << "time slot not avaliable";
				system("pause");
				createevent();
			}
			else
			{
				time2 = x1;
			}
			break;
		case 2:
			if (t2 == false)
			{
				cout << "time slot not avaliable";
				system("pause");
				createevent();
			}
			else
			{
				time2 = x2;
