						}
						else if (showdata[j].time == x4)
						{
							t4 = false;
							break;
						}
						else if (showdata[j].time == x5)
						{
							t5 = false;
							break;
						}
						else if (showdata[j].time == x6)
						{
							t6 = false;
							break;
						}
					}
