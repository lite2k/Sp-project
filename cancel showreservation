
#include < iostream>
#include < string>
using namespace std;
struct date
{
	string day;
	string month;
	string  year;
};
struct show
{
	string name;
	string id;
	string enddate;
	string startdate;
	string place;
	int seats;
} shows[100];
struct userdate
{
	string username;
	string password;
	string showtid[100];
} user[100];
struct currentuser {
	string username;
	string showid[100];
}cuser;
 
void cancelshow() {
	int counter1 = 0,  // the actual  array elemnts  user showid
	int counter2 = 0;    // the actual  array elemnts  shoe id 
	for (int i = 0; i < 100; i++)
	{
		if (cuser.showid[i].empty())
		{
			break;
		}
		{
			counter1++;
		}
	}
	for (int j = 0; j < 100; j++)      // the actual elements of  show id 
	{
		if (shows[j].id.empty())
		{
			break;
		}
		{
			counter2++;
		}
	}
	for (int i = 0; i < counter1; i++)               // show the reserved shows 
	{
		for (int j = 0; j < counter2; j++)
		{
			if (cuser.showid[i] == shows[j].id)
			{
				cout << i + 1 << ":" << shows[j].name << endl;
				break;
			}
		}
	}
	cout << " Select the show you want to cancel " << endl;
	int choice;
	cin >> choice;
	for (int i = 0; i < counter1; i++)               // show the reserved shows 
	{
		for (int j = 0; j < counter2; j++)
		{
			if (cuser.showid[i] == shows[j].id)
			{
				cout << i + 1 << ":" << shows[j].name << endl;
				break;
			}
		}
	}
	for (int i = choice - 1;  !shows[i].name.empty(); i++)     //  del the showid 
	{
		cuser.showid[i] = cuser.showid[i + 1];
	}
}
int main()
{
	cancelshow();
	system("pause");
	return 0;
}

 
