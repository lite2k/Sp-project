#include<iostream>
#include<string>
#include<fstream>
#include<sstream>
using namespace std;
struct date {
	int day;
	int year;
	int month;
};
struct shows {
	string name;
	string id;
	string showinhall;
	date startdate;
	date enddate;
	string time;
	int showseats;
};
struct currentuser
{
	string username;

	string showid[100];
};
currentuser reserver;
shows showdata[100];
void geteventdata()
{
	int nameindex = 0;
	int showinhallindex = 1;
	int idindex = 2;
	int dayindex = 3;
	int monthindex = 4;
	int yearindex = 5;
	int day1index = 6;
	int month1index = 7;
	int year1index = 8;
	int stime1 = 9;
	int seats = 10;
	string tempshow[1000];
	ifstream getshowdata;
	getshowdata.open("showdata.txt");
	if (getshowdata.fail())
	{
		cout << "error" << endl;
	}
	else
	{
		for (int i = 0; i < 1000; i++)
		{
			getline(getshowdata, tempshow[i]);
		}
		for (int i = 0; !tempshow[i].empty(); i++)
		{


			showdata[i].name = tempshow[nameindex];
			showdata[i].showinhall = tempshow[showinhallindex];
			showdata[i].id = tempshow[idindex];

			stringstream day1_to_int(tempshow[dayindex]);
			day1_to_int >> showdata[i].startdate.day;
			stringstream month1_to_int(tempshow[monthindex]);
			month1_to_int >> showdata[i].startdate.month;
			stringstream year1_to_int(tempshow[yearindex]);
			year1_to_int >> showdata[i].startdate.year;

			stringstream eday1_to_int(tempshow[day1index]);
			eday1_to_int >> showdata[i].enddate.day;
			stringstream emonth1_to_int(tempshow[month1index]);
			emonth1_to_int >> showdata[i].enddate.month;
			stringstream eyear1_to_int(tempshow[year1index]);
			eyear1_to_int >> showdata[i].enddate.year;

			showdata[i].time = tempshow[stime1];
			stringstream seats_to_int(tempshow[seats]);
			seats_to_int >> showdata[i].showseats;

			nameindex += 11;
			showinhallindex += 11;
			idindex += 11;
			dayindex += 11;
			monthindex += 11;
			yearindex += 11;
			day1index += 11;
			month1index += 11;
			year1index += 11;
			stime1 += 11;
			seats += 11;

		}
	}
	getshowdata.close();
}
void timeline()
{
bool displayavailable = false; //bool to avoid repition of *available shows*
bool ifnotavailable = true; //bool to display *NO SHOWS* message if there's no available ones
	int userday, usermonth, useryear;
	int dateindex;
	int tempstartday;
	cout << "Enter required date(D/M/Y) :";
	cout << "TRIAL" << endl << showdata[4].name << endl;
	cin >> userday >> usermonth >> useryear;
	for (int m = 0; !showdata[m].name.empty(); m++)
	{
		
		if (showdata[m].enddate.day - showdata[m].startdate.day == 0 && usermonth == showdata[m].startdate.month)
		{
			for (int r = 0; !showdata[r].name.empty();r++)
			{
				if (showdata[r].startdate.day == userday && showdata[r].startdate.month == usermonth && showdata[r].startdate.year == useryear)
				{
					cout << "* Available Shows *" << endl;
					ifnotavailable = false;
					displayavailable = true;
					break;
				}

			}
			for (int k = 0; !showdata[k].name.empty(); k++)
			{
				if (showdata[k].showseats < 100)
				{
					if (showdata[k].startdate.day == userday && showdata[k].startdate.month == usermonth && showdata[k].startdate.year == useryear)
					{
						cout << "Name :" << showdata[k].name << endl;
						cout << "Location : " << showdata[k].showinhall << endl;
						cout << "Time : " << showdata[k].time << endl;
						cout << "-----------" << endl;
					}
				}
				break;
			}
			
		}
	
		else
		{
			dateindex = userday - showdata[m].startdate.day;
			tempstartday = showdata[m].startdate.day;
				for (int n = 0; !showdata[n].name.empty(); n++)
				{
					if (showdata[n].showseats < 100)
					{
						for (int k = 0; k <= dateindex; k++)
						{
							if (displayavailable == false)
							{
								for (int j = 0; !showdata[j].name.empty(); j++)
								{
									if (tempstartday == userday && showdata[m].startdate.month == usermonth && showdata[m].startdate.year == useryear)
									{
										cout << "*Available Shows*" << endl;
										ifnotavailable = false;
										break;
									}
								}
							}
							if (tempstartday == userday && showdata[m].startdate.month == usermonth && showdata[m].startdate.year == useryear)
							{
								cout << "Name :" << showdata[m].name << endl;
								cout << "Location : " << showdata[m].showinhall << endl;
								cout << "Time : " << showdata[m].time << endl;
								cout << "-----------" << endl;
								
							}
							else
							{
								tempstartday++;
							}

						}
					}
					break;
				}
			}
			

		}


	if (ifnotavailable == true)
	{
		cout << "Sorry!No available shows." << endl;
	}

}
	

int main()
{
	geteventdata();
	timeline();
	system("pause");

	return 0;
}
