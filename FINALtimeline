#include<iostream>
#include<string>
#include<fstream>
#include<sstream>
using namespace std;
struct date {
	int day;
	int year;
	int month;
};
struct shows {
	string name;
	string id;
	string showinhall;
	date startdate;
	date enddate;
	string time;
	int showseats;
};
struct currentuser
{
	string username;

	string showid[100];
};
currentuser reserver;
shows showdata[100];
void geteventdata()
{
	int nameindex = 0;
	int showinhallindex = 1;
	int idindex = 2;
	int dayindex = 3;
	int monthindex = 4;
	int yearindex = 5;
	int day1index = 6;
	int month1index = 7;
	int year1index = 8;
	int stime1 = 9;
	int seats = 10;
	string tempshow[1000];
	ifstream getshowdata;
	getshowdata.open("showdata.txt");
	if (getshowdata.fail())
	{
		cout << "error" << endl;
	}
	else
	{
		for (int i = 0; i < 1000; i++)
		{
			getline(getshowdata, tempshow[i]);
		}
		for (int i = 0; !tempshow[i].empty(); i++)
		{


			showdata[i].name = tempshow[nameindex];
			showdata[i].showinhall = tempshow[showinhallindex];
			showdata[i].id = tempshow[idindex];

			stringstream day1_to_int(tempshow[dayindex]);
			day1_to_int >> showdata[i].startdate.day;
			stringstream month1_to_int(tempshow[monthindex]);
			month1_to_int >> showdata[i].startdate.month;
			stringstream year1_to_int(tempshow[yearindex]);
			year1_to_int >> showdata[i].startdate.year;

			stringstream eday1_to_int(tempshow[day1index]);
			eday1_to_int >> showdata[i].enddate.day;
			stringstream emonth1_to_int(tempshow[month1index]);
			emonth1_to_int >> showdata[i].enddate.month;
			stringstream eyear1_to_int(tempshow[year1index]);
			eyear1_to_int >> showdata[i].enddate.year;

			showdata[i].time = tempshow[stime1];
			stringstream seats_to_int(tempshow[seats]);
			seats_to_int >> showdata[i].showseats;

			nameindex += 11;
			showinhallindex += 11;
			idindex += 11;
			dayindex += 11;
			monthindex += 11;
			yearindex += 11;
			day1index += 11;
			month1index += 11;
			year1index += 11;
			stime1 += 11;
			seats += 11;

		}
	}
	getshowdata.close();
}
void timeline() 
{
	cout << "Enter required date(D/M/Y) : ";
	int userday, usermonth, useryear,index=0,index2=0;
	int dateindex, tempshowday,tempshowmonth,tempshowyear;
	cin >> userday >> usermonth >> useryear;

	for (int i = 0;!showdata[i].name.empty(); i++)
	{
		if (showdata[i].enddate.day - showdata[i].startdate.day == 0 && usermonth == showdata[i].startdate.month)
		{
			if (showdata[i].showseats < 100)
			{
				cout << "Name :" << showdata[i].name << endl;
				cout << "Location : " << showdata[i].showinhall << endl;
				cout << "Time : " << showdata[i].time << endl;
				cout << "-----------" << endl;
			}
		}
		else if (showdata[i].startdate.month == usermonth && showdata[i].startdate.year == useryear && showdata[i].startdate.month == showdata[i].enddate.month)
		{
			dateindex = showdata[i].enddate.day - showdata[i].startdate.day;
			tempshowday = showdata[i].startdate.day;
			for (int j = 0; j <= dateindex; j++)
			{
				if (tempshowday == userday)
				{
					if (showdata[i].showseats < 100)
					{
						cout << "Name :" << showdata[i].name << endl;
						cout << "Location : " << showdata[i].showinhall << endl;
						cout << "Time : " << showdata[i].time << endl;
						cout << "-----------" << endl;
						break;
					}
				}
				else
				{
					tempshowday++;
				}

			}
		}
		else if (showdata[i].startdate.month != showdata[i].enddate.month)
		{
			index = 2;
			tempshowday = showdata[i].startdate.day;
			tempshowmonth = showdata[i].startdate.month;
			tempshowyear = showdata[i].startdate.year;
			while (tempshowday != showdata[i].enddate.day && tempshowmonth != showdata[i].enddate.month)
			{
				index++;
				tempshowday++;
				if (tempshowday > 30)
				{
					tempshowday = 1;
					tempshowmonth++;
				}


			}
			tempshowday = showdata[i].startdate.day;
			tempshowmonth = showdata[i].startdate.month;
			tempshowyear = showdata[i].startdate.year;
			for (int y = 0;y < index; y++)
			{
				cout << "loop" << y << endl;
				if (tempshowday == userday && tempshowmonth == usermonth && tempshowyear == useryear)
				{
					if (showdata[i].showseats < 100)
					{
						cout << "Name :" << showdata[i].name << endl;
						cout << "Location : " << showdata[i].showinhall << endl;
						cout << "Time : " << showdata[i].time << endl;
						cout << "-----------" << endl;
						break;
					}
				}
				else
				{
					tempshowday++;
					if (tempshowday > 30)
					{
						tempshowmonth++;
						tempshowday = 1;
					}
					if (tempshowmonth > 12)
					{
						tempshowyear++;
						tempshowmonth = 1;

					}
				}
			}
		}
		else if (showdata[i].startdate.year != showdata[i].enddate.year)
		{

			index2 = 2;
			tempshowday = showdata[i].startdate.day;
			tempshowmonth = showdata[i].startdate.month;
			tempshowyear = showdata[i].startdate.year;
			while (tempshowday != showdata[i].enddate.day && tempshowmonth != showdata[i].enddate.month&& tempshowyear!=showdata[i].enddate.year)
			{
				index2++;
				tempshowday++;
				if (tempshowday > 30)
				{
					tempshowday = 1;
					tempshowmonth++;
				}
				if (tempshowmonth > 12)
				{
					tempshowyear++;
					tempshowmonth = 1;

				}
				tempshowday = showdata[i].startdate.day;
				tempshowmonth = showdata[i].startdate.month;
				tempshowyear = showdata[i].startdate.year;
				for (int y = 0;y < index2; y++)
				{
					if (tempshowday == userday && tempshowmonth == usermonth && tempshowyear == useryear)
					{
						if (showdata[i].showseats < 100)
						{
							cout << "Name :" << showdata[i].name << endl;
							cout << "Location : " << showdata[i].showinhall << endl;
							cout << "Time : " << showdata[i].time << endl;
							cout << "-----------" << endl;
							break;
						}
					}
					else
					{
						tempshowday++;
						if (tempshowday > 30)
						{
							tempshowmonth++;
							tempshowday = 1;
						}
						if (tempshowmonth > 12)
						{
							tempshowyear++;
							tempshowmonth = 1;

						}
					}
				}
			}

		}
	}
	

	
}
int main() {
	geteventdata();
	timeline();
	system("pause");
}
